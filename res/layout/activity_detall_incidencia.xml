<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:orientation="vertical"
    tools:context=".DetallIncidenciaActivity" >
 
    <TextView
        android:id="@+id/detAssumpte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="15dp"
        android:textColor="#000000"
        android:text="Assumpte de la incidència"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/detDetalls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"        
        android:textColor="#33B5E5"
        android:textSize="15sp"
        android:textStyle="bold"
        android:text="DETALLS BÀSICS"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="5dp"
        android:background="#33B5E5" />

    <TextView
        android:id="@+id/detClient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Client1"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/detCreador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CREADOR"
        android:textSize="12sp"
        android:textColor="#8F8F8F"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:background="#8F8F8F" />

    <TextView
        android:id="@+id/detTipusSpin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hardware"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/detTipus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"        
        android:textSize="12sp"
        android:textColor="#8F8F8F"
        android:text="TIPUS"
        android:layout_marginBottom="15dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/detDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#33B5E5"
        android:text="DESCRIPCIÓ"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <View
        android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="15dp"
        android:background="#33B5E5" />

    <TextView
        android:id="@+id/detDescripcio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BLA BLA BLA" />

    <TextView
        android:id="@+id/detComentari"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="COMENTARIS"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="#33B5E5"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <View
        android:id="@+id/view5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="15dp"
        android:background="#33B5E5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.25"
        android:orientation="vertical" >
    </LinearLayout>

</LinearLayout>